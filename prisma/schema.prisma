generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")

}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  name          String?
  image         String?
  password      String?       // Para login com email/senha
  emailVerified DateTime?
  credits       Int           @default(20) // 20 créditos iniciais
  creditsExpiresAt DateTime?  // Data de expiração dos créditos (90 dias)
  role          Role          @default(USER)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  userSessions  UserSession[] // ✅ Sessões de controle de dispositivos (ap_user_sessions)
  generations   Generation[]      // ✅ Ensaio de IA
  transactions  Transaction[]
  supportMessages SupportMessage[]
  faceSwapJobs    FaceSwapJob[]   // ✅ Face Swap
  imageUpscales   ImageUpscale[]  // ✅ Upscale Imagem
  
  // Credit System
  creditBalance       CreditBalance?
  creditTransactions  CreditTransaction[]
  subscription        UserSubscription?
  purchaseHistory     CreditPurchaseHistory[]
}

model FaceSwapJob {
  id           String   @id @default(cuid())
  userId       String
  jobId        String?  // ID retornado pela RunPod
  status       String   @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED, FAILED
  sourceImage  String   @db.Text // base64 da imagem fonte (rosto a copiar)
  targetImage  String   @db.Text // base64 da imagem alvo
  resultImage  String?  @db.Text // base64 do resultado
  errorMessage String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SupportMessage {
  id        String   @id @default(cuid())
  userId    String?
  name      String
  email     String
  whatsapp  String
  message   String
  status    String   @default("PENDING") // PENDING, READ, REPLIED
  createdAt DateTime @default(now())
  
  user      User?    @relation(fields: [userId], references: [id])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PhotoModel {
  id              String       @id @default(cuid())
  name            String
  description     String
  category        String       @default("geral")
  thumbnailUrl    String
  promptTemplate  String       // Prompt controlado pelo admin
  isPremium       Boolean      @default(false)
  creditsRequired Int          @default(1)
  isActive        Boolean      @default(true)
  displayOrder    Int          @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  
  tags            Tag[]        @relation("PhotoModelTags")
  generations     Generation[]
}

model Tag {
  id          String       @id @default(cuid())
  name        String       @unique
  slug        String       @unique
  color       String       @default("#6366f1") // Cor para badge
  createdAt   DateTime     @default(now())
  
  photoModels PhotoModel[] @relation("PhotoModelTags")
}

model Generation {
  id          String      @id @default(cuid())
  userId      String
  modelId     String
  aspectRatio String
  resultUrl   String?
  status      Status      @default(PENDING)
  createdAt   DateTime    @default(now())
  
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  model       PhotoModel  @relation(fields: [modelId], references: [id])
}

model Transaction {
  id            String   @id @default(cuid())
  userId        String
  stripeId      String   @unique
  packageId     String
  amount        Float
  credits       Int
  status        String
  createdAt     DateTime @default(now())
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
  USER
  ADMIN
}

enum Status {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

// ============================================
// CORE FEATURES - FERRAMENTAS PRINCIPAIS
// ============================================

// Upscale de Imagem (CORE TOOL #3)
model ImageUpscale {
  id          String   @id @default(cuid())
  userId      String
  imageUrl    String   @db.Text
  scale       String   // 2x, 4x
  resultUrl   String?  @db.Text
  status      String   @default("pending")
  creditsUsed Int
  runpodJobId String?
  errorMessage String?
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}




// ============================================
// CREDIT SYSTEM MODELS
// ============================================

// Saldo total de créditos por usuário
model CreditBalance {
  id           String   @id @default(cuid())
  userId       String   @unique
  totalCredits Int      @default(0)
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Histórico de transações de créditos
model CreditTransaction {
  id          String    @id @default(cuid())
  userId      String
  type        String    // PURCHASE, CONSUMPTION, BONUS, REFUND
  amount      Int       // Positivo para entrada, negativo para saída
  source      String?   // SUBSCRIPTION_MASTER, AVULSO, MIGRATION_V1, etc
  featureUsed String?   // Para CONSUMPTION: qual feature foi usada
  status      String    // ACTIVE, USED, EXPIRED
  expiresAt   DateTime? // null = não expira (Master)
  createdAt   DateTime  @default(now())
  
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, status])
  @@index([expiresAt])
}

// Assinatura do usuário
model UserSubscription {
  id               String    @id @default(cuid())
  userId           String    @unique
  planType         String    // BASICO, PADRAO, MASTER
  isActive         Boolean   @default(true)
  stripeCustomerId String?
  stripePriceId    String?
  currentPeriodEnd DateTime?
  cancelAtPeriodEnd Boolean  @default(false)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Histórico de compras de créditos
model CreditPurchaseHistory {
  id              String   @id @default(cuid())
  userId          String
  stripePaymentId String   @unique
  amount          Float    // Valor em reais
  creditsGranted  Int
  planType        String?  // BASICO, PADRAO, MASTER, AVULSO
  status          String   // PENDING, COMPLETED, FAILED, REFUNDED
  createdAt       DateTime @default(now())
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([status])
}



model UserSession {
  id          String   @id @default(cuid())
  userId      String
  deviceInfo  String?  @map("device_info")
  ipAddress   String?  @map("ip_address")
  expiresAt   DateTime @map("expires_at")
  createdAt   DateTime @default(now()) @map("created_at")

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("ap_user_sessions")
}
