generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  name          String?
  image         String?
  password      String?       // Para login com email/senha
  emailVerified DateTime?
  credits       Int           @default(3) // 3 gerações gratuitas
  role          Role          @default(USER)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  generations   Generation[]
  transactions  Transaction[]
  supportMessages SupportMessage[]
  faceSwapJobs    FaceSwapJob[]
  
  // v2.0 Features
  imageGenerations   ImageGeneration[]
  textToSpeeches     TextToSpeech[]
  voiceClone         VoiceClone?
  videoUpscales      VideoUpscale[]
  videoFaceSwaps     VideoFaceSwap[]
  imageUpscales      ImageUpscale[]
  inpaints           Inpaint[]
  avatarGenerations  AvatarGeneration[]
  virtualTryOns      VirtualTryOn[]
  transcriptions     Transcription[]
}

model FaceSwapJob {
  id           String   @id @default(cuid())
  userId       String
  jobId        String?  // ID retornado pela RunPod
  status       String   @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED, FAILED
  sourceImage  String   @db.Text // base64 da imagem fonte (rosto a copiar)
  targetImage  String   @db.Text // base64 da imagem alvo
  resultImage  String?  @db.Text // base64 do resultado
  errorMessage String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SupportMessage {
  id        String   @id @default(cuid())
  userId    String?
  name      String
  email     String
  whatsapp  String
  message   String
  status    String   @default("PENDING") // PENDING, READ, REPLIED
  createdAt DateTime @default(now())
  
  user      User?    @relation(fields: [userId], references: [id])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PhotoModel {
  id              String       @id @default(cuid())
  name            String
  description     String
  category        String       @default("geral")
  thumbnailUrl    String
  promptTemplate  String       // Prompt controlado pelo admin
  isPremium       Boolean      @default(false)
  creditsRequired Int          @default(1)
  isActive        Boolean      @default(true)
  displayOrder    Int          @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  
  tags            Tag[]        @relation("PhotoModelTags")
  generations     Generation[]
}

model Tag {
  id          String       @id @default(cuid())
  name        String       @unique
  slug        String       @unique
  color       String       @default("#6366f1") // Cor para badge
  createdAt   DateTime     @default(now())
  
  photoModels PhotoModel[] @relation("PhotoModelTags")
}

model Generation {
  id          String      @id @default(cuid())
  userId      String
  modelId     String
  aspectRatio String
  resultUrl   String?
  status      Status      @default(PENDING)
  createdAt   DateTime    @default(now())
  
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  model       PhotoModel  @relation(fields: [modelId], references: [id])
}

model Transaction {
  id            String   @id @default(cuid())
  userId        String
  stripeId      String   @unique
  packageId     String
  amount        Float
  credits       Int
  status        String
  createdAt     DateTime @default(now())
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
  USER
  ADMIN
}

enum Status {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

// ============================================
// v2.0 FEATURES - NOVOS MODELOS
// ============================================

// Geração de Imagens com FLUX.1
model ImageGeneration {
  id              String   @id @default(cuid())
  userId          String
  prompt          String   @db.Text
  negativePrompt  String?  @db.Text
  style           String?  // realistic, anime, oil_painting, 3d, cartoon
  aspectRatio     String   @default("1:1")
  quality         String   @default("high") // standard, high, ultra
  resultUrl       String?  @db.Text
  status          String   @default("pending")
  creditsUsed     Int      @default(15)
  runpodJobId     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Text-to-Speech
model TextToSpeech {
  id          String   @id @default(cuid())
  userId      String
  text        String   @db.Text
  voice       String   // male, female, neutral, cloned
  language    String   @default("pt-BR")
  speed       Float    @default(1.0)
  audioUrl    String?  @db.Text
  duration    Int?
  status      String   @default("pending")
  creditsUsed Int
  runpodJobId String?
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Clonagem de Voz (1 por usuário)
model VoiceClone {
  id             String   @id @default(cuid())
  userId         String   @unique
  sampleAudioUrl String?  @db.Text
  status         String   @default("pending")
  voiceId        String?
  creditsUsed    Int      @default(350)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Upscale de Vídeo
model VideoUpscale {
  id          String   @id @default(cuid())
  userId      String
  videoUrl    String   @db.Text
  resolution  String   // 720p→1080p, 1080p→4K
  resultUrl   String?  @db.Text
  duration    Int      // segundos
  status      String   @default("pending")
  creditsUsed Int
  runpodJobId String?
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Face Swap em Vídeo
model VideoFaceSwap {
  id              String   @id @default(cuid())
  userId          String
  sourceImageUrl  String   @db.Text
  targetVideoUrl  String   @db.Text
  resultUrl       String?  @db.Text
  videoDuration   Int      // segundos
  status          String   @default("pending")
  creditsUsed     Int
  runpodJobId     String?
  createdAt       DateTime @default(now())
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Upscale de Imagem
model ImageUpscale {
  id          String   @id @default(cuid())
  userId      String
  imageUrl    String   @db.Text
  scale       String   // 2x, 4x
  resultUrl   String?  @db.Text
  status      String   @default("pending")
  creditsUsed Int
  runpodJobId String?
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Inpaint (Remover Objeto)
model Inpaint {
  id          String   @id @default(cuid())
  userId      String
  imageUrl    String   @db.Text
  maskUrl     String   @db.Text
  resultUrl   String?  @db.Text
  status      String   @default("pending")
  creditsUsed Int
  runpodJobId String?
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Geração de Avatar
model AvatarGeneration {
  id          String   @id @default(cuid())
  userId      String
  description String   @db.Text
  style       String   // simple, realistic, animated, 3d
  resultUrl   String?  @db.Text
  status      String   @default("pending")
  creditsUsed Int
  runpodJobId String?
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Virtual Try-On
model VirtualTryOn {
  id              String   @id @default(cuid())
  userId          String
  personImageUrl  String   @db.Text
  garmentImageUrl String   @db.Text
  category        String   // upper_body, lower_body, dresses
  resultUrl       String?  @db.Text
  status          String   @default("pending")
  creditsUsed     Int
  runpodJobId     String?
  createdAt       DateTime @default(now())
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Transcrição de Áudio
model Transcription {
  id          String   @id @default(cuid())
  userId      String
  audioUrl    String   @db.Text
  language    String   @default("pt-BR")
  transcript  String?  @db.Text
  duration    Int      // segundos
  wordCount   Int?
  status      String   @default("pending")
  creditsUsed Int
  runpodJobId String?
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
